<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/needsLayout"
        android:layout_width="wrap_content"
        android:layout_height="120dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="8dp"
        android:background="@drawable/lay_back">

        <RelativeLayout
            android:id="@+id/needsLayout1"
            android:layout_width="240dp"
            android:layout_height="wrap_content"
            android:layout_margin="8dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/grey_boarder">

                <RelativeLayout
                    android:id="@+id/relative1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:padding="5dp">

                    <de.hdodenhof.circleimageview.CircleImageView
                        android:id="@+id/need_prof"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentStart="true"
                        android:src="@mipmap/profile" />

                    <TextView
                        android:id="@+id/need_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignTop="@+id/need_prof"
                        android:layout_marginLeft="10dp"
                        android:layout_toRightOf="@+id/need_prof"
                        android:text="TextView"
                        android:textColor="@color/dark_grey"
                        android:textSize="14sp"
                        android:singleLine="true"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/need_edu"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/need_name"
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="3dp"
                        android:layout_toRightOf="@+id/need_prof"
                        android:singleLine="true"
                        android:text="TextView"
                        android:textSize="12sp" />

                    <TextView
                        android:id="@+id/posted_on"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignLeft="@+id/need_edu"
                        android:layout_below="@+id/need_edu"
                        android:layout_marginTop="3dp"
                        android:text="Posted On:"
                        android:visibility="gone"
                        android:textSize="10dp" />

                    <View
                        android:id="@+id/view3"
                        android:layout_width="1dp"
                        android:layout_height="10dp"
                        android:layout_below="@+id/need_prof"
                        android:layout_weight="1" />

                </RelativeLayout>

                <View
                    android:id="@+id/v1"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_below="@+id/relative1"
                    android:background="#eeeeee" />

                <TextView
                    android:id="@+id/send"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/v1"
                    android:layout_centerInParent="true"
                    android:gravity="center"
                    android:padding="6dp"
                    android:text="5 More Dayz left"
                    android:textColor="@color/colorAccent"
                    android:textSize="15sp" />

            </RelativeLayout>
        </RelativeLayout>
    </RelativeLayout>
</RelativeLayout>
