<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


        <RelativeLayout
            android:id="@+id/user_toolbar"
            android:layout_width="match_parent"
            android:layout_height="88dp"
            android:background="#0a4b5d">

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/userpic_v2"
                android:layout_width="52dp"
                android:layout_height="52dp"
                android:layout_alignParentLeft="true"
                android:layout_centerInParent="true"
                android:layout_marginLeft="24dp"
                android:src="@mipmap/sample_app_img"/>

            <TextView
                android:id="@+id/username_v2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="12dp"
                android:layout_marginTop="15dp"
                android:layout_toRightOf="@+id/userpic_v2"
                android:lineSpacingExtra="-6sp"
                android:text="Aswin"
                android:textColor="#ffffff"
                android:textSize="24sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/companyname_v2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_below="@+id/username_v2"
                android:layout_marginBottom="16dp"
                android:layout_marginLeft="12dp"
                android:layout_marginRight="16dp"
                android:layout_toRightOf="@+id/userpic_v2"
                android:lineSpacingExtra="4sp"
                android:maxLines="1"
                android:singleLine="true"
                android:ellipsize="end"
                android:text="The Sample App"
                android:textColor="#ffffff"
                android:textSize="14sp"
                android:textStyle="bold" />
        </RelativeLayout>


        <RelativeLayout
            android:id="@+id/myprofile_container"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_below="@+id/user_toolbar">>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_centerInParent="true"
                android:layout_marginLeft="24dp"
                android:lineSpacingExtra="4sp"
                android:text="My Profile"
                android:textColor="#000000"
                android:textSize="16sp" />
            <ImageView
                android:id="@+id/myprofile_v2img"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerInParent="true"
                android:src="@mipmap/profile_v2"
                android:layout_marginRight="22dp"
                />
        </RelativeLayout>

        <View
            android:id="@+id/view2"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_below="@+id/myprofile_container"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="7dp"
            android:background="@color/boardspace_text_grey"/>

        <RelativeLayout
            android:id="@+id/settings_container"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_below="@+id/view2">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_centerInParent="true"
                android:layout_marginLeft="24dp"
                android:lineSpacingExtra="4sp"
                android:text="Settings"
                android:textColor="#000000"
                android:textSize="16sp" />
            <ImageView
                android:id="@+id/settings_v2img"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerInParent="true"
                android:src="@mipmap/setting_v2"
                android:layout_marginRight="22dp"
                />
        </RelativeLayout>
    <View
        android:id="@+id/view4"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@+id/settings_container"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="7dp"
        android:visibility="gone"
        android:background="@color/boardspace_text_grey"/>

    <RelativeLayout
        android:id="@+id/status_container"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:visibility="gone"
        android:layout_below="@+id/view4">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerInParent="true"
            android:layout_marginLeft="24dp"
            android:lineSpacingExtra="4sp"
            android:text="Status"
            android:textColor="#000000"
            android:textSize="16sp" />

        <ImageView
            android:id="@+id/status_out_v2img"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerInParent="true"
            android:src="@mipmap/changecompany_v2"
            android:layout_marginRight="22dp"
            />
    </RelativeLayout>
        <View
            android:id="@+id/view3"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_below="@+id/status_container"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="7dp"
            android:visibility="visible"
            android:background="@color/boardspace_text_grey"/>

        <RelativeLayout
            android:id="@+id/sign_out_container"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_below="@+id/view3">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_centerInParent="true"
                android:layout_marginLeft="24dp"
                android:lineSpacingExtra="4sp"
                android:text="Sign Out"
                android:textColor="#000000"
                android:textSize="16sp" />

            <ImageView
                android:id="@+id/sign_out_v2img"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerInParent="true"
                android:src="@mipmap/signout_v2"
                android:layout_marginRight="22dp"
                />
        </RelativeLayout>

</RelativeLayout>