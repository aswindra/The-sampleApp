<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/closelayout"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@color/transparent_grey">

    <RelativeLayout
        android:layout_width="312dp"
        android:layout_height="328dp"
        android:layout_centerInParent="true"
        android:background="@drawable/signout_background_common"
        android:gravity="center">


        <TextView
            android:id="@+id/update"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerInParent="true"
            android:layout_marginTop="28dp"
            android:textStyle="bold"
            android:gravity="center_horizontal"
            android:letterSpacing="0.01"
            android:lineSpacingExtra="8sp"
            android:text="Wishes"
            android:textColor="#0a4b5d"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/Are_u_sure"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/update"
            android:layout_centerInParent="true"
            android:layout_marginTop="24dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:gravity="center_horizontal"
            android:lineSpacingExtra="8sp"
            android:text="@string/bday_wish"
            android:textColor="#dd212424"
            android:textSize="16sp" />
        <TextView
            android:id="@+id/Are_u_sure1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/Are_u_sure"
            android:layout_centerInParent="true"
            android:layout_marginTop="4dp"
            android:gravity="center_horizontal"
            android:lineSpacingExtra="8sp"
            android:text="sign out?"
            android:visibility="invisible"
            android:textColor="#dd212424"
            android:textSize="16sp" />
        <RelativeLayout
            android:id="@+id/confirm"
            android:layout_width="match_parent"
            android:layout_height="44dp"
            android:layout_marginTop="44dp"
            android:layout_marginLeft="24dp"
            android:layout_marginRight="24dp"
            android:layout_below="@+id/Are_u_sure1"
            android:background="@drawable/signout_background">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_centerInParent="true"
                android:textStyle="bold"
                android:gravity="center"
                android:text="Edit"
                android:textColor="@color/colorPrimary"
                android:textSize="16sp" />
        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/decline"
            android:layout_width="match_parent"
            android:layout_height="44dp"
            android:layout_below="@+id/confirm"
            android:layout_marginBottom="24dp"
            android:paddingBottom="10dp"
            android:layout_marginLeft="24dp"
            android:layout_marginRight="24dp"
            android:layout_marginTop="15dp"
            android:background="@drawable/rectanglegreen">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:gravity="center"
                android:textStyle="bold"
                android:lineSpacingExtra="8sp"
                android:text="Okay, Send"
                android:textColor="@color/white"
                android:textSize="16sp" />
        </RelativeLayout>
    </RelativeLayout>
</RelativeLayout>